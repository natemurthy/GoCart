<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/gocartbg"
android:gravity="bottom">
    <Button android:id="@+id/findStoreButton" 
    		android:text="Find store nearby" 
    		android:layout_height="wrap_content" 
    		android:layout_alignParentBottom="true" 
    		android:layout_marginBottom="100dp" 
    		android:layout_centerHorizontal="true" 
    		android:layout_width="200dp"/>
    <Button android:id="@+id/checkIntoStoreButton" 
    		android:text="Check into store" 
    		android:layout_height="wrap_content" 
    		android:layout_alignParentBottom="true" 
    		android:layout_alignLeft="@+id/findStoreButton" 
    		android:layout_marginBottom="36dp" 
    		android:layout_width="200dp"/>
</RelativeLayout>
